extends ../layout.pug
include ../utils.pug

append head

    link(rel='stylesheet' href='/stylesheets/signup.css')

block content
    div(class="signup-container")
        <img src="https://media.discordapp.net/attachments/856636315927576608/858001199876669460/9f0b8f3078363686cd5625c722e5774e.png" class="pokeprobe-logo">
        div(class="register-text") Register
        +validationErrorSummary(errors)
        form(action="/trainers" method="post" class="signup-form")
            input(type="hidden" name="_csrf" value=csrfToken)
            +createFormField("text","trainerName","Trainer Name",trainerName)
            +createFormField("text","firstName","First Name", firstName)
            +createFormField("text","lastName","Last Name", lastName)
            +createFormField("email","email","Email", email)
            label(for="bio") Bio
            textarea(name="bio" class="bio-input")= bio
            +createFormField("password","password","Password", '', 'password-input')
            label(class='error-alert' id='password-match-check')
            +createFormField("password","confirmPassword","Confirm Password", '', 'confirm-password-input')
            button(class="signup-button") Submit

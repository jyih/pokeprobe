extends layout.pug
include utils.pug

block content
    +validationErrorSummary(errors)
    div(class="login-container")
      div(class="dugon-logo")
      div(class="slogan") Powered by Dugon
      form(action="/trainers/login" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        +createFormField("email","email","Email")
        +createFormField("password","password","Password")
        button Login
      form(action='/trainers/demo-login' method='post')
        button(type='submit') Demo User
